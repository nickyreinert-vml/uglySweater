<!DOCTYPE html>
<html lang="{{ language | default('en') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ vocab.html.title | default('VML Ugly Sweater Teams Background Generator') | safe}}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/sweater.css') }}">
    <link rel="icon" href="{{ url_for('static', filename='favicon.svg') }}" type="image/svg+xml">
    <meta name="csrf-token" content="{{ csrf_token }}">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'nonce-{{ nonce }}'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://www.figma.com;">
</head>
<body>
    <!-- Top Banner -->
    <div class="top-banner">
        <p>{{ vocab.html.banner | default('Lets unwrap that present…') | safe }}</p>
    </div>

    <main>
        <!-- Welcome Section -->
        <section id="welcome" class="section" data-index="0">
            <div class="welcome-layout">
                <div class="welcome-content">
                    <h1>{{ vocab.html.welcome_title | default('The Future 100: 2025') | safe}}</h1>
                    <div class="subtitle-container">
                        <p class="subtitle">{{ vocab.html.welcome_subtitle | default('Answer two quick questions, and our AI agent will create a personalized preview for you. Download the full report afterward to dive into all the insights.') | safe}}</p>
                    </div>
                    <img src="{{ url_for('static', filename='images/background_icon_snowflake.png') }}" alt="" class="background-icon">
                </div>
            </div>
        </section>

        <!-- Persona Selection Section -->
        <section id="challenge" class="section challenge-section" data-index="1">
            <div class="challenge-grid">
                <header class="challenge-header">
                    <p class="eyebrow">{{ vocab.html.challenge_eyebrow | default('Pick your persona flow') | safe }}</p>
                    <h2>{{ vocab.html.challenge_title | default('Tell us who you are in three quick steps.') | safe }}</h2>
                    <p class="challenge-subtitle">{{ vocab.html.challenge_subtitle | default('Choose the combination that fits you best to create the most relevant preview of Future 100 insights.') | safe }}</p>
                </header>

                <div class="challenge-steps">
                    <article class="challenge-card">
                        <div class="step-indicator">1</div>
                        <p class="step-label">{{ vocab.html.step_color | default('Choose your festive color theme:') | safe }}</p>
                        <div class="option-grid" id="listOfBusinesProblems"></div>
                    </article>

                    <article class="challenge-card">
                        <div class="step-indicator">2</div>
                        <p class="step-label">{{ vocab.html.step_style | default('Choose your knit style:') | safe }}</p>
                        <div class="option-grid" id="listOfIndustries"></div>
                    </article>

                    <article class="challenge-card">
                        <div class="step-indicator">3</div>
                        <p class="step-label">{{ vocab.html.step_elements | default('Choose your visual elements:') | safe }}</p>
                        <div class="option-grid" id="listOfDepartments" data-optional="true"></div>
                    </article>
                </div>

                <div class="challenge-cta">
                    <button id="challengePrimaryCta" type="button" class="button primary">{{ vocab.html.challenge_cta | default('Create your teams background') | safe }}</button>
                </div>
            </div>
            <img src="{{ url_for('static', filename='images/background_section_2_full.jpg') }}" alt="" class="section-background">
        </section>

        <!-- Results Section -->
        <section id="trends" class="section section-pink" data-index="3">
            <div class="section-content">
                <h2 class="results-title">{{ vocab.html.trends_title | default('Your trends for 2025') | safe}}</h2>
                <!-- <p class="results-intro">{{ vocab.html.trends_intro | default('Get a personalized preview of the trends shaping your industry in 2025 – and download the full report today.') | safe}}</p> -->

                <div class="results-container">
                    <!-- No prediction container -->
                    <div id="noPredictionMessage">
                        {{ vocab.html.no_prediction_message | default('Please select <a href="#challenge">your industry and business challenge above</a>, and I\'ll generate a personalized trend report excerpt for you.') | safe}}
                    </div>

                    <!-- Waiting message container -->
                    <div id="waitingNotificationContainer" class="hidden">
                        <div id="waitingMessage"></div>
                    </div>

                    <!-- API response container -->
                    <div id="prediction" class="prediction-content hidden"></div>

                    <!-- Download button (hidden initially) -->
                    <p class="results-cta-text hidden">{{ vocab.html.download_cta | default('Curious to know more? Download the full VML report “The Future 100: 2025" below.') | safe}}</p>
                    <a href="/download" class="button download-button hidden">{{ vocab.html.download_button | default('DOWNLOAD THE FULL REPORT') | safe}}</a>
                </div>
            </div>
            <img src="{{ url_for('static', filename='images/background_icon_snowflake.png') }}" alt="" class="background-icon">
        </section>
    </main>

    <!-- VML.com Footer -->

    <footer id="site-footer" role="contentinfo" class="footer">
        <div class="footer-section cnt-fc">
            <div class="footer-middle">
                <div class="footer-links">
                    <ul class="nav-main">
                        <li class="bold-link"><a aria-label="{{ vocab.html.contact_us | default('Contact Us') }}" href="https://www.vml.com/contact-us">{{ vocab.html.contact_us | default('Contact Us') }}</a></li>
                        <li class="bold-link"><a aria-label="{{ vocab.html.newsletter | default('Newsletter') }}" data-action="Newsletter" href="https://www.vml.com/ready-to-be-connected">{{ vocab.html.newsletter | default('Newsletter') }}</a></li>
                        <li class="bold-link"><a aria-label="{{ vocab.html.press_center | default('Press Center') }}" href="https://www.vml.com/press-center">{{ vocab.html.press_center | default('Press Center') }}</a></li>
                    </ul>
                    <ul class="nav-secondary">
                        <li><button aria-label="{{ vocab.html.cookie_settings | default('Cookie Settings') }}" class="link optanon-toggle-display">{{ vocab.html.cookie_settings | default('Cookie Settings') }}</button></li>
                        <li><a aria-label="{{ vocab.html.cookie_policy | default('Cookie Policy') }}" href="https://www.vml.com/cookie-policy">{{ vocab.html.cookie_policy | default('Cookie Policy') }}</a></li>
                        <li><a aria-label="{{ vocab.html.privacy_policy | default('Privacy') }}" href="https://www.vml.com/privacy-policy">{{ vocab.html.privacy_policy | default('Privacy') }}</a></li>
                        <li><a aria-label="{{ vocab.html.terms | default('Terms') }}" href="https://www.vml.com/terms">{{ vocab.html.terms | default('Terms') }}</a></li>
                        <li><a aria-label="{{ vocab.html.modern_slavery | default('Modern Slavery Act Statement') }}" target="_blank" href="https://www.wpp.com/sustainability/modern-slavery-act-statement">{{ vocab.html.modern_slavery | default('Modern Slavery Act Statement') }}</a></li>
                        <li><a aria-label="{{ vocab.html.ccpa_policy | default('CCPA Policy') }}" href="https://www.vml.com/ccpa-policy">{{ vocab.html.ccpa_policy | default('CCPA Policy') }}</a></li>
                        <li><a aria-label="{{ vocab.html.accessibility | default('Accessibility') }}" href="https://www.vml.com/accessibility">{{ vocab.html.accessibility | default('Accessibility') }}</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <h3>© 2025 VML. A <a href="https://www.wpp.com/" target="_blank" rel="noopener">{{ vocab.html.wpp_company | default('WPP Company') }}</a>.</h3>
            </div>
            <div class="footer-background-icon" aria-hidden="true"></div>
        </div>
    </footer>

    <!-- Scripts -->
    <script nonce="{{ nonce }}">
        document.addEventListener('DOMContentLoaded', function() {
            window.waitingMessages = [
                "{{ vocab.waiting_messages.thinking_about | default('Thinking about ') }}",
                "{{ vocab.waiting_messages.searching_trend_report | default('Searching through the trend report') }}",
                "{{ vocab.waiting_messages.writing_answers | default('Writing your answers') }}",
                "{{ vocab.waiting_messages.thinking_again | default('Thinking again') }}",
                "{{ vocab.waiting_messages.grabbing_drink | default('Grabbing a quick drink') }}",
                "{{ vocab.waiting_messages.searching_best_answers | default('Searching for the best answers') }}",
                "{{ vocab.waiting_messages.preparing_results | default('Preparing the results') }}",
                "{{ vocab.waiting_messages.taking_close_look | default('Taking another close look at your information') }}",
                "{{ vocab.waiting_messages.finding_common_thread | default('Finding the common thread') }}",
                "{{ vocab.waiting_messages.formulating_precisely | default('Formulating precisely') }}",
                "{{ vocab.waiting_messages.quick_thought_loop | default('Doing a quick thought loop') }}",
                "{{ vocab.waiting_messages.bringing_structure | default('Bringing structure to the chaos') }}",
                "{{ vocab.waiting_messages.getting_bottom | default('Getting to the bottom of this') }}",
                "{{ vocab.waiting_messages.sharpening_arguments | default('Sharpening the arguments') }}",
                "{{ vocab.waiting_messages.getting_straight_point | default('Getting straight to the point') }}"
            ];
        });

        window.departments = {
            "Brand Management & Advertising": "{{ vocab.departments.brand_management_advertising | default('Brand Management & Advertising')}}",
            "Customer Relationship Management": "{{ vocab.departments.customer_relationship_management | default('Customer Relationship Management')}}",
            "Customer Service & After Sales Service": "{{ vocab.departments.customer_service_after_sales_service | default('Customer Service & After Sales Service')}}",
            "Digital Marketing & E-Commerce": "{{ vocab.departments.digital_marketing_e_commerce | default('Digital Marketing & E-Commerce')}}",
            "Market Research & Analytics": "{{ vocab.departments.market_research_and_analytics | default('Market Research & Analytics')}}",
            "Marketing Strategy": "{{ vocab.departments.marketing_strategy | default('Marketing Strategy')}}",
            "Product Management": "{{ vocab.departments.product_management | default('Product Management')}}",
            "Public Relations": "{{ vocab.departments.public_relations | default('Public Relations')}}",
            "Sales": "{{ vocab.departments.sales | default('Sales')}}",
        };

        window.industries = {
            "Automotive": "{{ vocab.industries.automotive | default('Automotive')}}",
            "Consumer Goods & Fashion": "{{ vocab.industries.consumer_goods_fashion | default('Consumer Goods & Fashion')}}",
            "Education & Training": "{{ vocab.industries.education_training | default('Education & Training')}}",
            "Energy & Utilities": "{{ vocab.industries.energy_utilities | default('Energy & Utilities')}}",
            "Finance": "{{ vocab.industries.finance | default('Finance')}}",
            "Health & Life Sciences": "{{ vocab.industries.health_life_sciences | default('Health & Life Sciences')}}",
            "Tourism and Lifestyle": "{{ vocab.industries.tourism_lifestyle | default('Tourism and Lifestyle')}}",
            "IT & Telecommunications": "{{ vocab.industries.it_telecommunications | default('IT & Telecommunications')}}",
            "Manufacturing": "{{ vocab.industries.manufacturing | default('Manufacturing')}}",
            "Transport & Logistics": "{{ vocab.industries.transport_logistics | default('Transport & Logistics')}}",
        };

        window.businesProblems = {
            "Growth": "{{ vocab.business_problems.growth | default('Growth')}}",
            "Efficiency": "{{ vocab.business_problems.efficiency | default('Efficiency')}}",
            "Customer Experience": "{{ vocab.business_problems.customer_experience | default('Customer Experience')}}",
            "Product Innovation": "{{ vocab.business_problems.product_innovation | default('Product Innovation')}}",
            "Customer Insights": "{{ vocab.business_problems.customer_insights | default('Customer Insights')}}",
        };
    </script>
    <script src="{{ url_for('static', filename='js/app.js') }}" type="module"></script>
</body>
</html>